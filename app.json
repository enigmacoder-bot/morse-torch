{
  "expo": {
    "name": "Morse Flash",
    "slug": "morse-flash",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/morse-logo.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/morse-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "android": {
      "package": "com.morseflashlight.app",
      "versionCode": 6,
      "adaptiveIcon": {
        "foregroundImage": "./assets/morse-logo.png",
        "backgroundColor": "#0f172a"
      },
      "permissions": [
        "CAMERA",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "minSdkVersion": 21,
      "targetSdkVersion": 35,
      "compileSdkVersion": 35
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Morse Flash to access your camera for flashlight functionality."
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "kotlinVersion": "1.9.25",
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0"
          }
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "4b843952-d45d-4adf-af6e-473e7a3e4c94"
      }
    },
    "ios": {
      "bundleIdentifier": "com.morseflashlight.app",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    }
  }
}
