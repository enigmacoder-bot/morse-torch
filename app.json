{
  "expo": {
    "name": "Morse Flash",
    "slug": "morse-flash",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/morse-icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/morse-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "android": {
      "package": "com.morseflash.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/morse-icon.png",
        "backgroundColor": "#0f172a"
      },
      "permissions": [
        "CAMERA"
      ],
      "minSdkVersion": 21
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Morse Flash to access your camera for flashlight functionality."
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "kotlinVersion": "1.9.25"
          }
        }
      ]
    ]
  }
}
