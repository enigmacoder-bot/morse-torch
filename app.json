{
  "expo": {
    "name": "Morse Flash",
    "slug": "morse-flash",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "dark",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#0f172a"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "android": {
      "package": "com.morseflash.app",
      "permissions": [
        "CAMERA"
      ],
      "minSdkVersion": 21
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Morse Flash to access your camera for flashlight functionality."
        }
      ]
    ]
  }
}
